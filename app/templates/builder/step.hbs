<h3>Step {{model.sort}}</h3>

<form>
  <div class="form-group">
    <label>Instructions:</label>
    {{textarea value=model.comment class='form-control' placeholder='Write your instructions'}}
  </div>

  <button {{action 'save'}} class="btn btn-success">Save</button>
  <button {{action 'saveAndNextStep'}} class='btn btn-info'>Save and Next</button>
</form>

<code>
  <p>History size: <span class="badge">{{historySize.undo}}</span></p>
  <p>Is last step? <span class="badge">{{model.isLastStep}}</span></p>
  <p>Is first step? <span class="badge">{{model.isFirstStep}}</span></p>
  <p>Builder step size: <span class="badge">{{builder.stepSize}}</span></p>
  <p>Active step: <span class="badge">{{builder.activeStep}}</span></p>
</code>

{{#ember-wormhole to="history-toolbar"}}

  <div class="form-group">
    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" {{action 'back'}}>&lt; Undo</button>
        <button type="button" class="btn btn-default" {{action 'forward'}}>Redo &gt;</button>
      </div>
    </div>
  </div>

{{/ember-wormhole}}