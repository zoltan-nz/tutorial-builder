<h2>{{model.title}}</h2>

<div class="row">
  <div class="col-md-3">
    {{#each model.steps as |step|}}
      {{#link-to 'dashboard.tutorial.lesson.step' step}}
        {{step.name}}
      {{/link-to}}
    {{/each}}

    <button {{action 'addNewStep'}} class="btn btn-success">Add New Step</button>

  </div>

  <div class="col-md-9">

    <h2>Step Editor</h2>

    {{outlet}}

  </div>
</div>
