<h2>List of Tutorials</h2>

<form class="form-inline">
  <div class="form-group">
    {{input class="form-control" value=newTutorialName placeholder="Name of the tutorial"}}
    <button {{action 'createTutorial' newTutorialName}} type="submit" class="btn btn-success">Create a new tutorial</button>
  </div>
</form>

<br>

<div class="list-group">
  {{#each model as |tutorial|}}
    <li class="list-group-item">{{#link-to "dashboard.tutorial" tutorial}}{{tutorial.name}}{{/link-to}} ({{tutorial.lessons.length}})</li>
  {{/each}}
</div>
